{
  "name": "lesebot",
  "version": "0.1.0",
  "description": "A (helpful) Discord bot",
  "main": "dist/index.js",
  "repository": "https://github.com/sondr3/lesebot",
  "author": "Sondre Nilsen",
  "license": "MIT",
  "scripts": {
    "prebuild": "rm -rf dist/",
    "build": "tsc",
    "clean": "rm -rf dist/ .cache/ .coverage/",
    "dev": "tsc --watch --incremental",
    "dev:run": "nodemon --watch src --ext ts dist/index.js",
    "lint": "prettier --check ./src/**/*.ts ./tests/**/*.ts && eslint ./src/**/*.ts ./tests/**/*.ts",
    "release": "standard-version"
  },
  "dependencies": {
    "dateformat": "^3.0.3",
    "discord.js": "^12.2.0",
    "discord.js-commando": "github:discordjs/Commando#bdbd84e2a978322f3af12c21e729eb7b7cd4a3dc",
    "dotenv": "^8.2.0"
  },
  "prettier": "@sondr3/prettier",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@sondr3/eslint-config-typescript": "^0.5.2",
    "@sondr3/prettier": "^0.2.0",
    "@sondr3/tsconfig": "^0.4.0",
    "@types/dateformat": "^3.0.1",
    "@types/ws": "^7.2.4",
    "@types/node": "^14.0.1",
    "nodemon": "^2.0.4",
    "eslint": "^7.0.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.3",
    "prettier": "^2.0.5",
    "typescript": "^3.9.2"
  }
}
